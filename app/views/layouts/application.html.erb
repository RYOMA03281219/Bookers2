<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


    <nav class="navbar navbar-expand-lg navbar-left">
      <div class="container">
        <span>Bookers</span>
    </nav>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                  aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Home", user_path(current_user.id)%>
         </li>
            <li class="nav-item">
              <%= link_to 'Users', user_path(current_user.id), class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Books', books_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>

            <% else %>
            <li class="nav-item">
              <%= link_to "Home", root_path %>
            </li>
            <li class="nav-item">
              <%= link_to " About", home_about_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Log in", new_user_session_path %>
            </li>
          <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>

  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-9">CopyRight Infratop.inc</div>
    </div>
  </div>


</html>
