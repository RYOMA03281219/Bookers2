<body>
  <main>
    <p id="notice">
      <%= flash[:notice]%>
    </p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= render 'users/info', user: @user %>
          <%= render 'books/info', book: @book_new %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_profile_image(100,100) %><br>
                    <%= @book.user.name %>
                  <% end %>
                </td>

                <td>
                  <%= link_to @book.title, user_path(@book.user.id) %>
                </td>

                <td>
                  <%= @book.body %>
                </td>

                <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
                </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>
