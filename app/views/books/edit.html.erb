<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>


      <div class="error">
        <% if @book.errors.any? %>
          <%= @book.errors.count %> errors prohibited this product from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, autofocus: true, id:"book_title", class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-success" %>
      </div>

      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>
      <% end %>
      </div>
    </div>
  </div>
</main>