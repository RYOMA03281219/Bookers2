<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>


        <!--エラーメッセージ-->
        <div class="error">
          <% if @user.errors.any? %>
            <%= @user.errors.count %>prohibited this product from being saved:
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>


        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name", class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="user_Image">Image</label>
          <%= f.file_field :image, accept: "image/*",class: "form-control-file" %>
        </div>

        <div class="form-group">
          <label for="user_Introduction">Introduction</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

